@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="csv-upload">
    <h3>Upload CSV File</h3>

    <form method="post" enctype="multipart/form-data" action="/api/csv/upload"> 
        <input type="file" name="file" accept=".csv" />
        <button type="submit">Upload</button>
    </form>
</div>

<h3>Sales Data</h3>

<table class="table">
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>VIN</th>
            <th>Sale Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model.Sales)
        {
            <tr>
                <td>@sale.Make</td>
                <td>@sale.Model</td>
                <td>@sale.VIN</td>
                <td>@sale.SaleDate</td>
            </tr>
        }
    </tbody>
</table>

<a href="?page=@(Model.CurrentPage - 1)" class="btn btn-primary @(Model.CurrentPage <= 1 ? "disabled" : "")">Previous</a>
<a href="?page=@(Model.CurrentPage + 1)" class="btn btn-primary">Next</a>