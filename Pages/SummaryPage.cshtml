@page
@model SalesUON.Pages.SummaryModel
@{
    ViewData["Title"] = "Sales Summary";
}

<h2>Sales Summary</h2>

<h3>By Month</h3>
<table class="table table-sm">
    <thead>
        <tr>
            <th>Year</th>
            <th>Month</th>
            <th>Total Sales</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.MonthSummaryData != null)
        {
            @foreach (var item in Model.MonthSummaryData)
            {
                <tr>
                    <td>@item.Year</td>
                    <td>@item.Month</td>
                    <td>@item.TotalSales</td>
                </tr>
            }
        }
    </tbody>
</table>

